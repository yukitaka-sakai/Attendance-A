<% provide(:title, "login") %>
<h1>ログイン</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3 ">
    <%= form_with(scope: :session, url: login_path, local: true) do |f| %>
    
      <%= f.label "メールアドレス", class: "label-login" %>
      <%= f.email_field :email, class: "form-control" %>
      
      <%= f.label "パスワード", class: "label-login" %>
      <%= f.password_field :password, class: "form-control" %>
      
      <%= f.label :remember_me, class: "checkbox inline checkbox-login", for: "remember_me" do %>
        <%= f.check_box :remember_me, id: "remember-me" %>
        <sapan>ログイン情報を記憶する</sapan>
      <% end %>
      
      <%= f.submit "ログイン", class: "btn btn-primary btn-block" %>
    <% end %>
  <p>
    ユーザー登録がまだの方は、<%= link_to "こちら", signup_path %>
  </p>
  </div>
</div>
