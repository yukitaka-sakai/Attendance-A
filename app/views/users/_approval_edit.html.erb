<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
        
        <div>【<%= @user.name%>からの勤怠変更申請】</div>
          <table class="table table-bordered table-condensed" id="table-attendances" >
            <thead>
              <tr>
                <td rowspan="3">日付</td>
                <td rowspan="3">曜日</td>
                <td colspan="4">変更前</td>
                <td colspan="4">変更後</td>
                <td rowspan="3">備考</td>
                <td rowspan="3">指示者確認㊞</td>
                <td rowspan="3">変更</td>
                <td rowspan="3">勤怠確認</td>
              </tr>
              <tr>
                <td colspan="2">出社</td>
                <td colspan="2">退社</td>
                <td colspan="2">出社</td>
                <td colspan="2">退社</td>
              </tr>
              <tr>
                <td>時</td>
                <td>分</td>
                <td>時</td>
                <td>分</td>
                <td>時</td>
                <td>分</td>
                <td>時</td>
                <td>分</td>
              </tr>
            </thead>
            
            <tbody>
              <% @attendances.each do |day| %>
              <!--土日に色を付ける-->
              <% css_class = 
                  case %w{日 月 火 水 木 金 土}[day.worked_on.wday]
                  when '土' then 'text-primary'
                  when '日' then 'text-danger'
                  end
              %>      
                <tr>
                  <td><%= l(day.worked_on, format: :short) %></td>
                  <td class="<%= css_class %>"><%= $days_of_the_week[day.worked_on.wday] %></td>
                  <td><%= day.started_at.hour if day.started_at.present? %></td>
                  <td><%= day.started_at.floor_to(15.minutes).min if day.started_at.present? %></td>
                  <td><%= day.finished_at.hour if day.finished_at.present? %></td>
                  <td><%= day.finished_at.floor_to(15.minutes).min if day.finished_at.present? %></td>

                  <td><%= day.edit_started_at.hour if day.started_at.present? %></td>
                  <td><%= day.edit_started_at.floor_to(15.minutes).min if day.started_at.present? %></td>
                  <td><%= day.edit_finished_at.hour if day.finished_at.present? %></td>
                  <td><%= day.edit_finished_at.floor_to(15.minutes).min if day.finished_at.present? %></td>

                  <td class="text-field"><%= day.note %></td>
                  <td></td>
                  <td></td>
                  <td></td>
                </tr>
                  <div class="center">
                    <%= f.submit "変更を送信する", class: "btn btn-lg btn-primary" %>
                  </div>
              <% end %>
            </tbody>
          </table>
      </button>
    </div>
  </div>
</div>