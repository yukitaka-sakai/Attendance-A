<% provide(:title, "OfficeEdit") %>
<h1>拠点編集</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
  　
    <%= form_with(model: @office, local: true) do |f| %>
    <%= render "shared/error_messages", object: f.object %>
    
      <%= f.label :office_name, class: "label-offices" %>
      <%= f.text_field :office_name, class: "form-control" %>

      <%= f.label :office_type, class: "label-offices" %>
      <%= f.select :office_type, Office.office_types.keys.map {|k| [k, k]}, {}, { class: 'form-control', style: 'margin-bottom: 5px;', data: {} } %>
      
      <%= f.submit "登録", class: "btn btn-primary btn-block btn-offices" %>
    <% end %>
  </div>
</div>
